function saveMail($frm)
{

 
	$text = "--------------------------- \n";
	foreach ($frm as $key=>$value) 
	{
		$text .= "$key=$value, \n";
	}
	$log_file = 'sms_log.txt';
	$fp=fopen($log_file,'a');
	fwrite($fp, $text . "\n\n");
	fwrite($fp, $sql . "\n\n");
	fclose($fp);  // close fil


}

